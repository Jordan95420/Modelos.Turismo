@model IEnumerable<Turismo.Modelos.SeatCategory>

@{
    ViewData["Title"] = "Categorías de Asiento";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">Crear Nueva Categoría</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Type</td>
                <td>@item.Price.ToString("F2")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
