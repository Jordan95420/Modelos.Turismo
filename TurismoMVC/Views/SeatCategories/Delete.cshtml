@model Turismo.Modelos.SeatCategory

@{
    ViewData["Title"] = "Eliminar Categoría de Asiento";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Está seguro que desea eliminar esta categoría de asiento?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Price.ToString("F2")</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
