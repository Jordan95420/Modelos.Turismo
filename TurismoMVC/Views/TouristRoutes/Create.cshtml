@model Turismo.Modelos.TouristRoute

@{
    ViewData["Title"] = "Crear Ruta Turística";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartureSchedule" class="control-label"></label>
        <input asp-for="DepartureSchedule" class="form-control" />
        <span asp-validation-for="DepartureSchedule" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BasePrice" class="control-label"></label>
        <input asp-for="BasePrice" class="form-control" />
        <span asp-validation-for="BasePrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>

<a href="@Url.Action("Index")">Volver</a>
