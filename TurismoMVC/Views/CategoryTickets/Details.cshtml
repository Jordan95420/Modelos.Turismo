@model Turismo.Modelos.CategoryTicket

@{
    ViewData["Title"] = "Detalles de Categoría de Boleto";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Price.ToString("F2")</dd>
    </dl>
</div>

<a href="@Url.Action("Index")" class="btn btn-primary">Volver</a>
